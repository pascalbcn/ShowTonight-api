<h1>Create a Challenge</h1>

<form action="/Challenges/create" method="post">
  <div class="form-group">
    <label for="username">Username</label>
    <input class="form-control" type="text" id="username" name="username" placeholder="Name" required>
  </div>

  <div class="form-group">
    <label for="GameId">Game</label>
    <select class="form-control" id="GameId" name="GameId" required>
      {{#list Games}}
      <option value="{{_id}}">{{team_A}} - {{team_B}}</option>
      {{/list}}
    </select>
  </div>

  <div class="form-group">
    <label for="AmountStart">Mise d'entrée</label>
    <input class="form-control" type="text" id="AmountStart" name="AmountStart" placeholder="(en €)" required>
  </div>

  <div class="form-group">
    <label for="Challenge">Visibilité</label>
    <select class="form-control" id="Visibility" name="Visibility" required>
      <option value="Friends">Friends</option>
      <option value="Public">Public</option>
       </select>
  </div>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">
      Je lance un challenge lamak
    </button>
  </div>
</form>