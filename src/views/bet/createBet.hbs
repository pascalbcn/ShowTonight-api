<h1>Create a bet</h1>

<form action="/bets/create" method="post">
  <div class="form-group">
    <label for="username">Username</label>
    <input class="form-control" type="text" id="username" name="username" placeholder="Name" required>
  </div>

  <div class="form-group">
    <label for="GameId">Game</label>
    <select class="form-control" id="GameId" name="GameId" required>
      {{#list Games}}
      <option value={{Gameid}}>{{team_A}} - {{team_B}}</option>
      {{/list}}
    </select>
  </div>

  <div class="form-group">
    <label for="Bet">Selected option</label>
    <select class="form-control" id="result" name="result" required>
      <option value="Home team wins">Home Team wins </option>
      <option value="Away team wins">Away team wins </option>
      <option value="Draw">Draw </option>
       </select>
  </div>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">
      Submit my bet!
    </button>
  </div>
</form>