<h1>Create bet</h1>

<form action="/bets/create" method="post">
  <div class="form-group">
    <label for="username">Username*</label>
    <input class="form-control" type="text" id="username" name="username" placeholder="Nom" required>
  </div>

  <div class="form-group">
    <label for="GameId">Game*</label>
    <select class="form-control" id="GameId" name="GameId" required>
      {{#list Games}}
      <option value={{id}}>{{name}}</option>
      {{/list}}
    </select>
  </div>

  <div class="form-group">
    <label for="GameId">GameId*</label>
    <input class="form-control" type="number" id="GameId" name="GameId" placeholder="Nombre de places" required>
  </div>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">
      Create
    </button>
  </div>
</form>