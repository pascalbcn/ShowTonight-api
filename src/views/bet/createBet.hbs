<h1>Create bet</h1>

<form action="/bets/create" method="post">
  <div class="form-group">
    <label for="username">Username*</label>
    <input class="form-control" type="text" id="username" name="username" placeholder="Nom" required>
  </div>

  <div class="form-group">
    <label for="GameId">Matchs</label>
    <select class="form-control" id="GameId" name="GameId" required>
      {{#list Games}}
      <option value={{id}}>{{team_A}} - {{team_B}}</option>
      {{/list}}
    </select>
  </div>

  <div class="form-group">
    <label for="Bet">Pari du vainqueur</label>
    <input class="form-control" type="text" id="result" name="result" placeholder="1, N ou 2" required>
  </div>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">
      Create
    </button>
  </div>
</form>